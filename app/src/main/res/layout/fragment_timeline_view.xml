<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tv_patient_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:boxStrokeColor="@color/primary_blue"
        style="@style/BC_VAX.Widget.OutlinedBox.ExposedDropdownMenu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/space_2_x"
        app:layout_constraintEnd_toStartOf="@+id/iv_search"
        android:layout_marginEnd="@dimen/space_4_x"
        android:layout_marginStart="@dimen/space_4_x">

        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
            android:id="@+id/ed_patient_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/BC_VAX.TextAppearance.MaterialComponents.Headline6"
            android:inputType="none" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_timeline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/timeline"
        style="@style/BC_VAX.TextAppearance.MaterialComponents.Headline2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/space_4_x"
        app:layout_constraintTop_toBottomOf="@+id/tv_patient_name"
        android:layout_marginTop="@dimen/space_2_x" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_add_health_record"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_timeline_add_health_record"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="@dimen/space_4_x"
        android:layout_marginTop="@dimen/space_2_x" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_search"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_search"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/space_2_x"
        app:layout_constraintEnd_toStartOf="@+id/iv_add_health_record"
        android:layout_marginEnd="@dimen/space_1_x" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:boxStrokeColor="@color/primary_blue"
        style="@style/BC_VAX.Widget.OutlinedBox.ExposedDropdownMenu"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_timeline"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/space_4_x">

        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
            android:id="@+id/ed_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/BC_VAX.TextAppearance.MaterialComponents.Headline4"
            android:textColorHint="@color/status_blue"
            android:inputType="none" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tv_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:boxStrokeColor="@color/primary_blue"
        style="@style/BC_VAX.Widget.OutlinedBox.ExposedDropdownMenu"
        app:layout_constraintTop_toTopOf="@+id/tv_type"
        app:layout_constraintBottom_toBottomOf="@+id/tv_type"
        android:layout_marginStart="@dimen/space_2_x"
        app:layout_constraintStart_toEndOf="@+id/tv_type">

        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
            android:id="@+id/ed_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/BC_VAX.TextAppearance.MaterialComponents.Headline4"
            android:textColorHint="@color/status_blue"
            android:inputType="none" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_timeline"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_type"
        android:layout_marginTop="@dimen/space_2_x"
        tools:listitem="@layout/item_health_records_abstract" />

</androidx.constraintlayout.widget.ConstraintLayout>