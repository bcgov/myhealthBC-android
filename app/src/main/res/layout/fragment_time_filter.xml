<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.healthrecord.individual.TypeFilterFragment">

    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_show_results"
        android:layout_marginBottom="@dimen/space_1_x">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tip_from"
                style="@style/HealthGateway.Widget.App.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_4_x"
                android:layout_marginTop="@dimen/space_2_x"
                android:layout_marginEnd="@dimen/space_4_x"
                android:hint="@string/from_yyyy_mm_dd"
                app:endIconContentDescription="@string/select_date"
                app:endIconDrawable="@drawable/ic_calender"
                app:endIconMode="custom"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/edt_dob"
                    android:inputType="date"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tip_to"
                style="@style/HealthGateway.Widget.App.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_4_x"
                android:layout_marginTop="@dimen/space_4_x"
                android:layout_marginEnd="@dimen/space_4_x"
                android:hint="@string/to_yyyy_mm_dd"
                app:endIconContentDescription="@string/select_date"
                app:endIconDrawable="@drawable/ic_calender"
                app:endIconMode="custom"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tip_from">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/edt_doc"
                    android:inputType="date"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:id="@+id/line1"
                android:layout_width="0dp"
                android:layout_height="1.5dp"
                android:background="@drawable/solid_line"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                tools:visibility="visible"
                android:layout_marginStart="@dimen/space_4_x"
                android:layout_marginEnd="@dimen/space_4_x"
                app:layout_constraintTop_toBottomOf="@+id/tip_to"
                android:layout_marginTop="@dimen/space_2_x" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/all_records_from"
                style="@style/HealthGateway.TextAppearance.MaterialComponents.Headline3"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/space_4_x"
                app:layout_constraintTop_toBottomOf="@+id/line1"
                android:layout_marginTop="@dimen/space_2_x" />

            <CheckBox
                android:id="@+id/check_box_2022"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/_2022"
                style="@style/HealthGateway.CheckBox"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/space_4_x"
                app:layout_constraintTop_toBottomOf="@+id/tv_title"
                android:layout_marginTop="@dimen/space_1_x" />

            <CheckBox
                android:id="@+id/check_box_2021"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_2021"
                style="@style/HealthGateway.CheckBox"
                app:layout_constraintTop_toBottomOf="@+id/check_box_2022"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/space_4_x"
                android:layout_marginTop="@dimen/space_2_x" />

            <CheckBox
                android:id="@+id/check_box_2020"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_2020"
                style="@style/HealthGateway.CheckBox"
                app:layout_constraintTop_toBottomOf="@+id/check_box_2021"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/space_4_x"
                android:layout_marginTop="@dimen/space_2_x" />

            <CheckBox
                android:id="@+id/check_box_before_2020"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/before_2020"
                style="@style/HealthGateway.CheckBox"
                app:layout_constraintTop_toBottomOf="@+id/check_box_2020"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/space_4_x"
                android:layout_marginTop="@dimen/space_2_x" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_show_results"
        style="@style/HealthGateway.Widget.MaterialComponents.Button1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_4_x"
        android:layout_marginEnd="@dimen/space_4_x"
        android:layout_marginBottom="@dimen/space_3_x"
        android:text="@string/show_results"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>