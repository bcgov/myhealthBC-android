<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Button style-->
    <style name="HealthGateway.Widget.MaterialComponents.Button1" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary_blue</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/bc_sans_bold</item>
    </style>

    <style name="HealthGateway.FullWidthButton" parent="HealthGateway.Widget.MaterialComponents.Button1">
        <item name="cornerRadius">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="HealthGateway.Widget.MaterialComponents.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/blue</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/bc_sans_font_family</item>
    </style>

    <style name="HealthGateway.Widget.MaterialComponents.Button2" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/material_button_color_states</item>
        <item name="android:enabled">true</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/bc_sans_bold</item>
        <item name="iconGravity">start</item>
        <item name="iconTint">@color/white</item>
        <item name="android:lineSpacingMultiplier">1.0</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="HealthGateway.Widget.MaterialComponents.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/primary_blue</item>
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@android:color/white</item>
        <item name="fontFamily">@font/bc_sans_bold</item>
        <item name="android:lineSpacingMultiplier">0.1</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="HealthGateway.Widget.MaterialComponents.Button.OutlinedButton.Icon" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/primary_blue</item>
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@android:color/white</item>
        <item name="fontFamily">@font/bc_sans_bold</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">start</item>
        <item name="iconTint">@color/primary_blue</item>
        <item name="android:lineSpacingMultiplier">1.0</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <!--Edit text styles-->
    <style name="HealthGateway.Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="hintTextColor">?attr/colorOnSurface</item>
        <item name="errorTextAppearance">?textAppearanceBody2</item>
        <item name="hintTextAppearance">?textAppearanceCaption</item>
        <item name="helperTextTextAppearance">@style/TextAppearance.App.HelperText</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextColor">@color/grey</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="colorPrimary">@color/shadow_grey</item>
        <item name="colorOnSurface">@color/grey</item>
        <item name="colorError">@color/error</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.App.Subtitle1</item>
        <item name="textAppearanceCaption">@style/TextAppearance.App.Caption</item>
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox
        </item>
    </style>

    <style name="TextAppearance.App.HelperText" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/bc_sans_regular</item>
        <item name="android:fontFamily">@font/bc_sans_regular</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextAppearance.App.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/bc_sans_regular</item>
        <item name="android:fontFamily">@font/bc_sans_regular</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="TextAppearance.App.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/bc_sans_regular</item>
        <item name="android:fontFamily">@font/bc_sans_regular</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="TextAppearance.App.Headline" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/bc_sans_regular</item>
        <item name="android:fontFamily">@font/bc_sans_regular</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="ShapeRounded">
        <item name="cornerSize">50%</item>
    </style>

    <style name="HealthGateway.Widget.OutlinedBox.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">

    </style>

    <style name="HealthGateway.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="fontFamily">@font/bc_sans_regular</item>
        <item name="android:fontFamily">@font/bc_sans_regular</item>
        <item name="android:textSize">17sp</item>
        <item name="android:colorAccent">@color/blue</item>
        <item name="boxStrokeColor">@color/blue</item>
    </style>

    <style name="ChipFilterByType" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipCornerRadius">@dimen/space_1_x</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@drawable/chip_stroke_color_selector</item>
        <item name="chipBackgroundColor">@drawable/chip_bg_color_selector</item>
        <item name="android:textColor">@drawable/chip_text_color_selector</item>
        <item name="checkedIconEnabled">false</item>
        <item name="checkedIcon">@null</item>
        <item name="fontFamily">@font/bc_sans_regular</item>
        <item name="android:fontFamily">@font/bc_sans_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Expanded" parent="HealthGateway.TextAppearance.MaterialComponents.Headline2">
        <item name="android:textColor">@color/primary_blue</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Collapsed" parent="HealthGateway.TextAppearance.MaterialComponents.Headline3">
        <item name="android:textColor">@color/primary_blue</item>
    </style>

    <style name="ContentDivider" parent="android:Widget">
        <item name="android:background">@color/shadow_grey</item>
        <item name="android:layout_marginTop">@dimen/space_3_x</item>
        <item name="android:layout_marginBottom">@dimen/space_3_x</item>
        <item name="android:layout_marginStart">@dimen/space_4_x</item>
        <item name="android:layout_marginEnd">@dimen/space_4_x</item>
    </style>

    <style name="BannerButton" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/bc_sans_bold</item>
        <item name="android:fontFamily">@font/bc_sans_bold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:drawablePadding">@dimen/space_0_5_x</item>
        <item name="android:paddingTop">@dimen/space_2_x</item>
        <item name="android:paddingBottom">@dimen/space_2_x</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/primary_blue</item>
    </style>
</resources>