<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Button style-->
    <style name="BC_VAX.Widget.MaterialComponents.Button1" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary_blue</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/bc_sans_bold</item>
    </style>

    <style name="BC_VAX.Widget.MaterialComponents.Button2" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary_blue</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/bc_sans_bold</item>
        <item name="iconGravity">start</item>
        <item name="iconTint">@color/white</item>
        <item name="android:lineSpacingMultiplier">1.0</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BC_VAX.Widget.MaterialComponents.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/primary_blue</item>
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@android:color/white</item>
        <item name="fontFamily">@font/bc_sans_bold</item>
        <item name="android:lineSpacingMultiplier">0.1</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BC_VAX.Widget.MaterialComponents.Button.OutlinedButton.Icon" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/primary_blue</item>
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@android:color/white</item>
        <item name="fontFamily">@font/bc_sans_bold</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">start</item>
        <item name="iconTint">@color/primary_blue</item>
        <item name="android:lineSpacingMultiplier">1.0</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <!--Edit text styles-->
    <style name="BC_VAX.Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="hintTextColor">?attr/colorOnSurface</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="colorPrimary">@color/shadow_grey</item>
        <item name="colorOnSurface">@color/grey</item>
        <item name="colorError">@color/error</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.App.Subtitle1</item>
        <item name="textAppearanceCaption">@style/TextAppearance.App.Caption</item>
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
    </style>

    <style name="TextAppearance.App.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/bc_sans_regular</item>
        <item name="android:fontFamily">@font/bc_sans_regular</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="TextAppearance.App.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/bc_sans_regular</item>
        <item name="android:fontFamily">@font/bc_sans_regular</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="ShapeRounded">
        <item name="cornerSize">50%</item>
    </style>

    <style name="BC_VAX.Widget.OutlinedBox.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">

    </style>

    <style name="BC_VAX.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="fontFamily">@font/bc_sans_regular</item>
        <item name="android:fontFamily">@font/bc_sans_regular</item>
        <item name="android:textSize">17sp</item>
        <item name="android:colorAccent">@color/blue</item>
        <item name="boxStrokeColor">@color/blue</item>
    </style>

</resources>